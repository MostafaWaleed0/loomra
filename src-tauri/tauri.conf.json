{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.loomra.app",
  "productName": "Loomra",
  "version": "1.3.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "icon": ["icons/icon.png", "icons/icon.icns", "icons/icon.ico"],
    "targets": "all",
    "createUpdaterArtifacts": true,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    },
    "windows": [
      {
        "title": "Loomra",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/MostafaWaleed0/loomra/releases/latest/download/latest.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQyMTgxODUzNkNBNkJCQjQKUldTMHU2WnNVeGdZUXJjeVpWaUZFZy8yNHJXMjVyOEhCdXNUanpPU0hBZzVZdmRCSktwTHM4SjUK"
    },
    "fs": {
      "scope": ["$APPDATA/*", "$APPDATA/**"]
    }
  }
}
